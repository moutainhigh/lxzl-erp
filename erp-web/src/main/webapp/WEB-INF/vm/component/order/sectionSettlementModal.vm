<div id="sectionSettlementModal" class="popup-basic popup-lg admin-form mfp-with-anim ">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i><span class="modalTitle"></span></span>
        </div>
        <form method="post" class="inputForm">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-6">
                        <label for="changeTimePicker" class="field-label">结算类型修改时间</label>
                        <div>
                            <div class="input-group date" id="changeTimePicker">
                                <input type="hidden" name="statementDateChangeTime" id="statementDateChangeTime">
                                <input type="text" readonly id="changeTimeInput" data-type="date" class="form-control" autocomplete="off" placeholder="选择时间" style="height:42px;">
                                <span class="input-group-addon cursor"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="changeType" class="field-label">截止类型</label>
                        <label class="field select">
                            <select id="changeType" name="changeType">
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-6">
                        <label for="beforeStatementDate" class="field-label">修改前结算时间</label>
                        <label class="field select">
                            <select id="beforeStatementDate" name="beforeStatementDate" class="settlementSelect">
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                    <div class="col-md-6">
                        <label for="afterStatementDate" class="field-label">修改后结算时间</label>
                        <label class="field select">
                            <select id="afterStatementDate" name="afterStatementDate" class="settlementSelect">
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
                <button type="button" class="button btn-default cancelButton">取消</button>
            </div>
        </form>
    </div>
</div>