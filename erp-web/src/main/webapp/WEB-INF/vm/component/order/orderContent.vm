                            <th>设备押金</th>
                            <th>支付方式</th>
                            <th class="text-right">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#listData}}
                        <tr class="productRow skuRow" productRowKey="{{productId}}">
                            <td>
                                <label class="option block mn">
                                    <input type="checkbox" name="checkItem" value="{{productId}}" data-skuid="{{skuId}}" data-isnew="{{isNewProduct}}">
                                    <span class="checkbox mn"></span>
                                </label>
                            </td>
                            <td>
##                                <span class="badge {{isNewProductBadgeClass}} mr5">{{#isNewValue}}{{isNewProduct}}{{/isNewValue}}</span>
                                {{#isNewValueBadge}}{{isNewProduct}}{{/isNewValueBadge}}
                                {{productName}}
                            </td>
                            <td>{{#productInfo}}{{categoryName}}{{/productInfo}}</td>
                            <td>{{#productInfo}}{{brandName}}{{/productInfo}}</td>
                            <td>{{propertiesToStr}}</td>
                            <td>#*￥{{#price}}{{skuPrice}}{{/price}}*# ￥{{currentSkuPrice}}</td>
                            <td class="productUnitAmountTd">
                                <div class="smart-widget sm-right smr-50">
                                    <input type="hidden" name="isNewProduct" value="{{isNewProduct}}" class="isNewProduct" />
                                    <input type="hidden" name="productId" value="{{productId}}" class="productId" />
                                    <input type="hidden" name="skuId" value="{{skuId}}" class="productSkuId" />
                                    <label class="field prepend-icon">
                                        <input type="text" name="productUnitAmount-{{skuId}}-{{rowKey}}" value="{{productUnitAmount}}" class="productUnitAmount form-control required moneyNumber gui-input" placeholder="输入商品单价" />
                                        <label for="listPrice" class="field-icon"><i class="fa fa-jpy"></i></label>
                                    </label>
                                    <button type="button" class="button btn-primary bradiusN chooseProductUnitAmount" data-productskuid="{{skuId}}"><i class="fa fa-search"></i></button>
                                </div>
                            </td>
                            <td>
                                <label class="field prepend-icon mw200">
                                    <input type="text" name="productCount-{{skuId}}-{{rowKey}}" value="{{productCount}}" class="productCount form-control required checkInteger pl10" placeholder="输入租赁数量" />
                                </label>
                            </td>
##                            <td>
##                                <label class="field select">
##                                    <select name="rentType-{{skuId}}-{{rowKey}}" class="rentType required" style="min-width: 130px;">
##                                        <option value="">选择租赁类型</option>
##                                        {{#rentTypeList}}
##                                        <option value="{{num}}" {{#selected}}selected{{/selected}}>{{value}}</option>
##                                        {{/rentTypeList}}
##                                    </select>
##                                    <i class="arrow"></i>
##                                </label>
##                            </td>
##                            <td>
##                                <div class="mw200">
##                                    <label class="field prepend-icon">
##                                        <input type="text" name="rentTimeLength-{{skuId}}-{{rowKey}}" value="{{rentTimeLength}}" class="rentTimeLength form-control required checkInteger pl10" placeholder="租赁时长" />
##                                    </label>
##                                </div>
##                            </td>
                            <td>
                                {{#showDepositAmount}}
                                <label class="field prepend-icon">
                                    <input type="text" name="depositAmount-{{skuId}}-{{rowKey}}" value="{{depositAmount}}" class="depositAmount form-control required moneyNumber gui-input" placeholder="输入设备押金" />
                                    <label for="listPrice" class="field-icon"><i class="fa fa-jpy"></i></label>
                                </label>
                                {{/showDepositAmount}}
                            </td>
                            <td>
                                {{#showDepositAmount}}
                                <label class="field select">
                                    <select name="payMode-{{skuId}}-{{rowKey}}" class="payMode required" style="min-width: 130px;">
                                        <option value="">选择支付方式</option>
                                        {{#payModeList}}
                                        <option value="{{num}}" {{#selected}}selected{{/selected}}>{{value}}</option>
                                        {{/payModeList}}
                                    </select>
                                    <i class="arrow"></i>
                                </label>
                                {{/showDepositAmount}}
                            </td>
                            <td class="text-right">
                                <div class="btn-group text-right">
                                    <a href="#" type="button" class="btn btn-default btn-xs deleteSKUButton" data-skuid="{{skuId}}" data-productid="{{productId}}" data-isnew="{{isNewProduct}}">删除</a>
                                </div>
                            </td>
                        </tr>
                        {{/listData}}
                        {{^listData}}
                        <tr>
                            <td valign="top" colspan="14" class="text-center">没有选择商品</td>
                        </tr>
                        {{/listData}}
                        </tbody>
                    </script>
                    <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="dataListTable"></table>
                </div>
            </div>
            <div id="purchaseOrderMaterialItems" class="tab-pane">
                <div class="panel-menu p12 br-n br-b">
                    <div class="row">
                        <div class="pull-left ml10">
                            <div class="btn-group" id="actionCommonButtons">
                                <button type="button" class="btn btn-primary btn-sm" id="batchAddMaterial" title="选择配件">
                                    <i class="fa fa-plus"></i> 选择配件
                                </button>
                                <button type="button" class="btn btn-primary btn-sm" id="batchDeleteMaterial" title="删除配件">
                                    <i class="fa fa-trash-o"></i> 删除
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
