                            <td>{{brandName}}</td>
                            <td>{{materialTypeStr}}</td>
                            <td>￥{{currentMaterialPrice}}</td>
                            <td class="materialUnitAmountTd">
                                <div class="smart-widget sm-right smr-50">
                                    <label class="field prepend-icon">
                                        <input type="hidden" name="isNewMaterial" value="{{isNewMaterial}}" class="isNewMaterial" />
                                        <input type="hidden" name="materialNo" value="{{materialNo}}" class="materialNo" />
                                        <input type="hidden" name="materialId" value="{{materialId}}" class="materialId" />
                                        <input type="text" name="materialUnitAmount-{{materialNo}}" value="{{materialUnitAmount}}" class="materialUnitAmount form-control required moneyNumber gui-input" placeholder="输入配件单价" />
                                        <label for="listPrice" class="field-icon"><i class="fa fa-jpy"></i></label>
                                    </label>
                                    <button type="button" class="button btn-primary bradiusN chooseMaterialUnitAmount" data-materialid="{{materialId}}"><i class="fa fa-search"></i></button>
                                </div>
                            </td>
                            <td>
                                <label class="field prepend-icon mw200">
                                    <input type="text" name="materialCount-{{materialNo}}" value="{{materialCount}}" class="materialCount form-control required checkInteger pl10" placeholder="输入租赁数量" />
                                </label>
                            </td>
