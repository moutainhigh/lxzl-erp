<div class="panel panel-primary panel-border top mb35">
    <div class="panel-heading">
        <span class="panel-title">基本信息</span>
    </div>
    <div class="form-horizontal panel-body bg-light dark">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group field">
                    <label class="col-md-3 control-label">客户</label>
                    <div class="col-md-9">
                        <div class="input-group bringContainer">
                            <input id="buyerCustomerName" name="buyerCustomerName" bringFiled="buyerCustomerName" class="form-control required" type="text" readonly placeholder="请选择客户" />
                            <span class="input-group-addon cursor chooseSupplier" id="chooseBusinessCustomer"><i class="fa fa-search mr5"></i>企业客户</span>
                            <span class="input-group-addon cursor chooseSupplier" id="chooseCustomer"><i class="fa fa-search mr5"></i>个人客户</span>
                        </div>
                    </div>
                </div>
                <div class="form-group field">
                    <label class="col-md-3 control-label" style="visibility: hidden;">收货地址</label>
                    <div class="col-md-9">
                        #parse("component/customer/address.vm")
                    </div>
                </div>
                <div class="form-group field">
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">送货方式</label>
                        <div class="col-md-6">
                            <div>
                                <select class="form-control bradius required" name="deliveryMode" id="deliveryMode"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">运费</label>
                        <div class="col-md-6">
                            <div>
                                <input id="logisticsAmount" name="logisticsAmount" class="form-control moneyNumber" type="text" placeholder="请输入运费" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group field">
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">租赁类型</label>
                        <div class="col-md-6">
                            <div>
                                <select class="form-control bradius required" name="rentType" id="rentType"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">租赁时长</label>
                        <div class="col-md-6">
                            <div>
                                <input id="rentTimeLength" name="rentTimeLength" class="form-control number required" type="text" placeholder="输入租赁时长" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group field">
                    <label class="col-md-3 control-label">送货日期</label>
                    <div class="col-md-3">
                        <div class="input-group date" id="createExpectDeliveryTimePicker">
                            <input id="expectDeliveryTime" name="expectDeliveryTime" class="form-control required" type="text" autocomplete="off"  placeholder="请选择交货日期" />
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <label class="col-md-3 control-label">起租日期</label>
                    <div class="col-md-3">
                        <div class="input-group date" id="createTimePicker">
                            <input id="rentStartTime" name="rentStartTime" class="form-control required" type="text" autocomplete="off"  placeholder="请选择起租日期" />
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class="form-group field">
                    <label class="col-md-3 control-label">税率</label>
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-addon">17%</span>
                            <input class="form-control required taxRate2" type="text" name="highTaxRate" id="highTaxRate"  placeholder="请输入0-100的值" />
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>
                    <label class="col-md-3 control-label">税率</label>
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-addon">6%</span>
                            <input class="form-control required taxRate2" type="text" name="lowTaxRate" id="lowTaxRate" placeholder="请输入0-100的值" />
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>
                </div>
                <div class="form-group field">
                    <label class="col-md-3 control-label">购买人备注</label>
                    <div class="col-md-9">
                        <textarea class="form-control" id="buyerRemark" rows="3"  name="buyerRemark"></textarea>
                    </div>
                </div>
                <div class="form-group field hide" id="orderSubCompanyNameFormControl">
                    <label class="col-md-3 control-label">订单所属公司</label>
                    <div class="col-md-9">
                        <div class="input-group bringContainer">
                            <input id="orderSubCompanyName" name="orderSubCompanyName" bringFiled="orderSubCompanyName" class="form-control required" type="text" readonly placeholder="请选择订单所属公司" />
                            <span class="input-group-addon cursor" id="chooseSubCompany"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                #parse("component/customer/risk.vm")
            </div>
        </div>
    </div>
    <div class="panel-heading">
        <div class="row">
            <ul class="nav panel-tabs-border panel-tabs panel-tabs-left">
                <li class="active">
                    <a href="#purchaseOrderProductItems" data-toggle="tab">商品项（共<span id="orderItemProductCount">0</span>件）</a>
                </li>
                <li>
                    <a href="#purchaseOrderMaterialItems" data-toggle="tab">配件项（共<span id="orderItemMaterialCount">0</span>件）</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="panel-body dark pn">
        <div class="tab-content pn br-n">
            <div id="purchaseOrderProductItems" class="tab-pane active">
                <div class="panel-menu p12 br-n br-b">
                    <div class="row">
                        <div class="pull-left ml10">
                            <div class="btn-group" id="actionCommonButtons">
                                <button type="button" class="btn btn-primary btn-sm" id="batchAddProduct" title="选择商品">
                                    <i class="fa fa-plus"></i> 选择商品
                                </button>
                                <button type="button" class="btn btn-primary btn-sm" id="batchDeleteProduct" title="删除商品">
                                    <i class="fa fa-trash-o"></i> 删除
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <script type="text/html" id="dataListTpl">
                        <thead>
                        <tr class="bg-light">
