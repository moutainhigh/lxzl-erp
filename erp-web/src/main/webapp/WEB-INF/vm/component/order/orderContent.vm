                                <label class="field prepend-icon">
                                    <input type="text" name="depositAmount-{{materialNo}}" value="{{depositAmount}}" class="depositAmount form-control required moneyNumber gui-input" placeholder="输入配件押金" />
                                    <label for="listPrice" class="field-icon"><i class="fa fa-jpy"></i></label>
                                </label>
                                {{/showDepositAmount}}
                            </td>
                            <td>
                                {{#showDepositAmount}}
                                <label class="field select">
                                    <select name="payMode-{{skuId}}-{{rowKey}}" class="payMode required" style="min-width: 130px;">
                                        <option value="">选择支付方式</option>
                                        {{#payModeList}}
                                        <option value="{{num}}" {{#selected}}selected{{/selected}}>{{value}}</option>
                                        {{/payModeList}}
                                    </select>
                                    <i class="arrow"></i>
                                </label>
                                {{/showDepositAmount}}
                            </td>
                            <td class="text-right">
                                <div class="btn-group text-right">
                                    <a href="#" type="button" class="btn btn-default btn-xs delMaterialButton" data-materialno="{{materialNo}}" data-isnew="{{isNewMaterial}}">删除</a>
                                </div>
                            </td>
                        </tr>
                        {{/listData}}
                        {{^listData}}
                        <tr>
                            <td valign="top" colspan="14" class="text-center">没有选择配件</td>
                        </tr>
                        {{/listData}}
                        {{/dataSource}}
                        </tbody>
                    </script>
                    <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="materialDataListTable"></table>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer clearfix">
        <button class="btn btn-default pull-right ml15 goback">返回</button>
        <button type="submit" class="btn btn-primary pull-right">保存</button>
    </div>
</div>