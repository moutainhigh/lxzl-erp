<div class="popup-basic popup-xl admin-form mfp-with-anim theme-primary " id="chooseSupplierModal">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-search"></i>选择供应商</span>
        </div>
        <div class="panel-menu p12">
            <div class="row">
                <div class="col-md-12 text-right">
                    <form id="chooseSupplierSearchForm" class="form-horizontal">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary btn-sm">查询</button>
                            <button type="reset" class="btn btn-default btn-sm">重置</button>
                        </div>
                        <div class="form-group pull-right mn mr10" style="width: 120px;">
                            <div class="input-group">
                                <input type="text" name="supplierName" id="supplierName" class="form-control input-sm bradius" autocomplete="off" placeholder="输入仓库名称" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="panel-body pn">
            <div class="table-responsive">
                <script type="text/html" id="chooseWarehouseModalDataListTpl">
                    <thead>
                    <tr>
                        <th>
                            <label class="option block mn">
                                <input type="checkbox" name="checkAll" value="">
                                <span class="checkbox mn"></span>
                            </label>
                        </th>
                        <th>供应商ID</th>
                        <th>供应商</th>
                        <th>地址</th>
                        <th>联系人</th>
                        <th>联系电话</th>
                        <th class="text-right">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#dataSource}}
                    {{#listData}}
                    <tr data-rowdata="{{rowData}}">
                        <td>
                            <label class="option block mn">
                                <input type="checkbox" name="checkItem" value="{{productId}}">
                                <span class="checkbox mn"></span>
                            </label>
                        </td>
                        <td>{{supplierId}}</td>
                        <td>{{supplierName}}</td>
                        <td>{{address}}</td>
                        <td>{{contactName}}</td>
                        <td>{{contactPhone}}</td>
                        <td class="text-right">
                            <div class="btn-group text-right">
                                <a href="#" type="button" class="btn btn-default btn-xs chooseButton">选择</a>
                            </div>
                        </td>
                    </tr>
                    {{/listData}}
                    {{^listData}}
                    <tr>
                        <td valign="top" colspan="14" class="text-center">没有查询到商品</td>
                    </tr>
                    {{/listData}}
                    {{/dataSource}}
                    </tbody>
                </script>
                <table class="table table-striped admin-form theme-warning tc-checkbox-1 fs13" id="chooseWarehouseModalDataListTable"></table>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 col-md-12 text-right mt10 mb10">
                    #parse("component/pager.vm")
                </div>
            </div>
        </div>
    </div>
</div>



