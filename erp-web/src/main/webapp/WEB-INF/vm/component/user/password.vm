<div id="updateUserPasswordModal" class="popup-basic admin-form mfp-with-anim">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i>修改登录密码</span>
        </div>
        <!-- end .panel-heading section -->

        <form method="post" id="updateUserPasswordForm" callback-func="UpdateUserPassword.callBackFunc" description="修改登录密码">
            <input type="hidden" name="userId" />
            <div class="panel-body p25">

                <div class="section row">
                    <div class="col-md-12">
                        <label for="password" class="field prepend-icon">
                            <input type="password" name="password" id="password" class="gui-input required commonPassword" placeholder="输入新密码..." maxlength="18">
                            <label for="password" class="field-icon"><i class="fa fa-lock"></i>
                            </label>
                        </label>
                    </div>
                </div>

                <div class="section row">
                    <div class="col-md-12">
                        <label for="rePassword" class="field prepend-icon">
                            <input type="password" name="rePassword" id="rePassword" class="gui-input required commonPassword" equalTo="#password" placeholder="确认新密码" maxlength="18">
                            <label for="website" class="field-icon"><i class="fa fa-unlock-alt"></i>
                            </label>
                        </label>
                    </div>
                </div>

            </div>
            <!-- end .form-body section -->

            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
            </div>
            <!-- end .form-footer section -->
        </form>
    </div>
    <!-- end: .panel -->
</div>