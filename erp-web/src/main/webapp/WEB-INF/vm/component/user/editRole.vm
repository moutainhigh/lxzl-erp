<div id="addRoleModal" class="popup-basic popup-lg admin-form mfp-with-anim mfp-hide">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i>添加角色</span>
        </div>

        <form method="post" action="$ctx/userRole/add" id="addRoleForm" callback-func="AddRole.callBackFunc" description="添加角色">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-6">
                        <label for="roleName" class="field-label">角色名称</label>
                        <label for="roleName" class="field prepend-icon">
                            <input type="text" name="roleName" id="roleName" class="gui-input required" placeholder="角色名称..." maxlength="20">
                            <label for="roleName" class="field-icon"><i class="fa fa-user"></i>
                            </label>
                        </label>
                    </div>

                    <div class="col-md-6">
                        <label for="realName" class="field-label">上级角色</label>
                        <label class="field select">
                            <select id="parentRoleId" name="parentRoleId">
                                <option value="">选择</option>
                                <option value="0"></option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>

                </div>

                <div class="section row">
                    <div class="col-md-6">
                        <label for="isSuperAdmin" class="field-label">超级管理员</label>
                        <label class="field select">
                            <select id="isSuperAdmin" name="isSuperAdmin">
                                <option value="0">否</option>
                                <option value="1">是</option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>

                    <div class="col-md-6">
                        <label for="roleDesc" class="field-label">角色描述</label>
                        <label for="roleDesc" class="field prepend-icon">
                            <input type="text" name="roleDesc" id="roleDesc" class="gui-input" placeholder="请输入描述内容...">
                            <label for="roleDesc" class="field-icon"><i class="fa fa-comments"></i>
                            </label>
                        </label>
                    </div>

                </div>

                <div class="section">
                    <label for="username" class="field-label">备注</label>
                    <label for="remark" class="field prepend-icon">
                        <textarea class="gui-textarea" id="remark" name="remark" placeholder="请输入备注"></textarea>
                        <label for="remark" class="field-icon"><i class="fa fa-comments"></i>
                        </label>
                    </label>
                </div>

            </div>

            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
            </div>
        </form>
    </div>
</div>