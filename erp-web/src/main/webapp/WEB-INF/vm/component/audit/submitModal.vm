<div id="submitAuditModal" class="popup-basic admin-form mfp-with-anim "> ##mfp-hide
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i>提交审核</span>
        </div>
        <form method="post" id="submitAuditForm" description="提交审核">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-12">
                        <label class="field select">
                            <select id="verifyUser" name="verifyUser" class="required">
                                <option value="">请选择下一步审核人</option>
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="verifyOpinion" class="field prepend-icon">
                            <textarea class="gui-textarea" id="commitRemark" name="commitRemark" placeholder="备注..."></textarea>
                            <label for="verifyOpinion" class="field-icon"><i class="fa fa-comments"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="section-divider mv40"><span>上传图片附件</span></div>
                    <div class="tray-bin">
                        <div class="atl-dropzone dropzoneImg" id="auditImgIdList">
                            <div class="dz-default dz-message" >
                                <span>
                                    <i class="fa fa-cloud-upload"></i>
                                    <span class="sub-text">将图片拖入或点击（支持.jpg|.ipeg|.png，不能超过4M）</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
                <button type="button" class="button btn-default cancelButton">取消</button>
            </div>
        </form>
    </div>
</div>