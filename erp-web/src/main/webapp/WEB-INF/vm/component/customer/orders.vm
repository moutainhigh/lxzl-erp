<div class="panel">
    <div class="panel-heading">
        <ul class="nav panel-tabs-border panel-tabs panel-tabs-left">
            <li class="active">
                <a href="#orderList" data-toggle="tab" aria-expanded="false">订单</a>
            </li>
            <li>
                <a href="#returnOrder" data-toggle="tab" aria-expanded="true">退货单</a>
            </li>
            <li>
                <a href="#rechargeList" data-toggle="tab" aria-expanded="true">充值记录</a>
            </li>
            <li>
                <a href="#accountList" data-toggle="tab" aria-expanded="true">账户流水</a>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content pn br-n">
            <div id="orderList" class="tab-pane active">
                <div class="row">
                    <div class="table-responsive">
                        <script type="text/html" id="orderListTpl">
                            <thead>
                            <tr class="bg-light">
                                {{#hasCommonActionButtons}}
                                <th class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="orders" value="">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </th>
                                {{/hasCommonActionButtons}}
                                <th class="">订单编号</th>
                                <th class="">订单总价</th>
                                <th class="">支付状态</th>
                                <th class="">订单状态</th>
                                <th class="">创建人</th>
                                {{#hasRowActionButtons}}
                                <th class="text-right">操作</th>
                                {{/hasRowActionButtons}}
                            </tr>
                            </thead>
                            <tbody>
                            {{#dataSource}}
                            {{#listData}}
                            <tr>
                                {{#hasCommonActionButtons}}
                                <td class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="mobileos" value="FR">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </td>
                                {{/hasCommonActionButtons}}
                                <td>{{orderNo}}</td>
                                <td>￥{{#price}}{{totalOrderAmount}}{{/price}}</td>
                                <td>
                                    <p class="mn {{payStatusClass}}">{{payStatusValue}}</p>
                                    <p class="mn mt5">{{#clockTime}}{{payTime}}{{/clockTime}}</p>
                                </td>
                                <td class="{{orderStatusClass}}">{{orderStatusStr}}</td>>
                                <td>
                                    <p class="mn">{{createUserRealName}}</p>
                                    <p class="mn mt5">{{#clockShorTime}}{{createTime}}{{/clockShorTime}}</p>
                                </td>
                                {{#hasRowActionButtons}}
                                <td class="text-right">
                                    <div class="btn-group text-right">
                                        {{#rowActionButtons}}
                                        <a href="${ctx}{{menuUrl}}?no={{orderNo}}" type="button" class="btn btn-default btn-xs {{class}}" data-orderno="{{orderNo}}">{{text}}</a>
                                        {{/rowActionButtons}}
                                    </div>
                                </td>
                                {{/hasRowActionButtons}}
                            </tr>
                            {{/listData}}
                            {{^listData}}
                            <tr>
                                <td valign="top" colspan="14" class="text-center">没有查询到订单</td>
                            </tr>
                            {{/listData}}
                            {{/dataSource}}
                            </tbody>
                        </script>
                        <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="orderListTable"></table>
                    </div>
                </div>
                <div class="row br-t">
                    <div class="col-xs-12 col-md-12 text-right mt10 mb10">
                        #parse("component/pager.vm")
                    </div>
                </div>
            </div>
            <div id="returnOrder" class="tab-pane">
                <div class="row section">
                    <div class="table-responsive">
                        <script type="text/html" id="returnOrderListTpl">
                            <thead>
                            <tr class="bg-light">
                                {{#hasCommonActionButtons}}
                                <th class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="orders" value="">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </th>
                                {{/hasCommonActionButtons}}
                                <th>退货单编号</th>
                                <th>是否计租赁费用</th>
                                <th>租赁总费用</th>
                                <th>服务费</th>
                                <th>损坏加收费</th>
                                <th>状态</th>
                                <th>创建人</th>
                                {{#hasRowActionButtons}}
                                <th class="text-right">操作</th>
                                {{/hasRowActionButtons}}
                            </tr>
                            </thead>
                            <tbody>
                            {{#dataSource}}
                            {{#listData}}
                            <tr>
                                {{#hasCommonActionButtons}}
                                <td class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="mobileos" value="FR">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </td>
                                {{/hasCommonActionButtons}}
                                <td>{{returnOrderNo}}</td>
                                <td>{{isChargingStr}}</td>
                                <td>￥{{#price}}{{totalRentCost}}{{/price}}</td>
                                <td>￥{{#price}}{{serviceCost}}{{/price}}</td>
                                <td>￥{{#price}}{{damageCost}}{{/price}}</td>
                                <td class="{{returnOrderStatusClass}}">{{returnOrderStatusValue}}</td>
                                <td>
                                    <p class="mn">{{createUserRealName}}</p>
                                    <p class="mn mt5">{{#clockShorTime}}{{createTime}}{{/clockShorTime}}</p>
                                </td>
                                {{#hasRowActionButtons}}
                                <td class="text-right">
                                    <div class="btn-group text-right">
                                        {{#rowActionButtons}}
                                        <a href="${ctx}{{menuUrl}}?no={{returnOrderNo}}" type="button" class="btn btn-default btn-xs {{class}}" data-returnorderno="{{returnOrderNo}}">{{text}}</a>
                                        {{/rowActionButtons}}
                                    </div>
                                </td>
                                {{/hasRowActionButtons}}
                            </tr>
                            {{/listData}}
                            {{^listData}}
                            <tr>
                                <td valign="top" colspan="14" class="text-center">没有查询到退货单</td>
                            </tr>
                            {{/listData}}
                            {{/dataSource}}
                            </tbody>
                        </script>
                        <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="returnOrderListTable"></table>
                    </div>
                </div>
                <div class="row br-t">
                    <div class="col-xs-12 col-md-12 text-right mt10 mb10">
                        #parse("component/pager.vm")
                    </div>
                </div>
            </div>
            <div id="rechargeList" class="tab-pane">
                <div class="row section">
                    <div class="table-responsive">
                        <script type="text/html" id="rechargeListTpl">
                            <thead>
                            <tr class="bg-light">
                                <th>编号</th>
                                <th>充值类型</th>
                                <th>客户编号</th>
                                <th>客户名</th>
                                <th>业务系统订单号</th>
                                <th>发起充值时间</th>
                                <th>充值金额</th>
                                <th>充值状态</th>
                                <th>简述</th>
                                <th>充值详情</th>
                                <th>充值公总号</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#dataSource}}
                            {{#listData}}
                            <tr>
                                <td>{{chargeOrderNo}}</td>
                                <td>{{chargeTypeValue}}</td>
                                <td>{{businessCustomerNo}}</td>
                                <td>{{customerName}}</td>
                                <td>{{businessOrderNo}}</td>
                                <td>{{#time}}{{chargeTime}}{{/time}}</td>
                                <td>￥{{#price}}{{chargeAmountExpect}}{{/price}}</td>
                                <td>{{chargeStatusValue}}</td>
                                <td>{{chargeName}}</td>
                                <td>{{chargeDescription}}</td>
                                <td>{{openId}}</td>
                            </tr>
                            {{/listData}}
                            {{^listData}}
                            <tr>
                                <td valign="top" colspan="16" class="text-center">无数据</td>
                            </tr>
                            {{/listData}}
                            {{/dataSource}}
                            </tbody>
                        </script>
                        <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="rechargeListTable"></table>
                    </div>
                </div>
                <div class="row br-t">
                    <div class="col-xs-12 col-md-12 text-right mt10 mb10">
                        #parse("component/pager.vm")
                    </div>
                </div>
            </div>
            <div id="accountList" class="tab-pane">
                <script type="text/html" id="totalAccountTpl">
                    {{#hasTotalAccount}}
                    {{#totalAccount}}
                    <div class="row br-b ph8 account-title">客户账户流水汇总信息</div>
                    <div class="row pt20">
                        <div class="col-md-4">
                            <dl class="dl-horizontal">
                                <dt>可用余额（未操作前）：</dt><dd class="mb5">￥{{oldBalanceAmount}}</dd>
                                <dt>总冻结金额（未操作前）：</dt><dd class="mb5">￥{{oldTotalFrozenAmount}}</dd>
                                <dt>押金金额（未操作前）：</dt><dd class="mb5">￥{{oldDepositAmount}}</dd>
                                <dt>租金存款（未操作前）：</dt><dd class="mb5">￥{{oldRentDepositAmount}}</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <dl class="dl-horizontal">
                                <dt>可用余额（操作后）：</dt><dd class="mb5 text-primary">￥{{newBalanceAmount}}</dd>
                                <dt>总冻结金额（操作后）：</dt><dd class="mb5 text-primary">￥{{newTotalFrozenAmount}}</dd>
                                <dt>押金金额（操作后）：</dt><dd class="mb5 text-primary">￥{{newDepositAmount}}</dd>
                                <dt>租金存款（操作后）：</dt><dd class="mb5 text-primary">￥{{newRentDepositAmount}}</dd>
                                <dt>交易总额：</dt><dd class="mb5 text-danger">￥{{tradeAmount}}</dd>
                            </dl>
                        </div>
                    </div>
                    {{/totalAccount}}
                    {{/hasTotalAccount}}
                </script>
                <div id="totalAccount"></div>

                <div class="row section">
                    <div class="br-b ph8 account-title">客户账户流水信息</div>
                    <div class="table-responsive">
                        <script type="text/html" id="accountListTpl">
                            <thead>
                            <tr class="bg-light">
                                {{#hasCommonActionButtons}}
                                <th class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="orders" value="">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </th>
                                {{/hasCommonActionButtons}}
                                <th>流水单编号</th>
                                <th>记录类型</th>
                                <th>交易金额</th>
                                <th>可用余额（未操作前）</th>
                                <th>可用余额（操作后）</th>
                                <th>冻结金额（未操作前）</th>
                                <th>冻结金额（操作后）</th>
                                <th>押金金额（未操作前）</th>
                                <th>押金金额（操作后）</th>
                                <th>租金存款（未操作前）</th>
                                <th>租金存款（操作后）</th>
                                <th>备注</th>
                                <th>创建时间</th>
                                <th>更新时间</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#dataSource}}
                            {{#listData}}
                            <tr>
                                {{#hasCommonActionButtons}}
                                <td class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="mobileos" value="FR">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </td>
                                {{/hasCommonActionButtons}}
                                <td>{{businessCustomerAccountLogId}}</td>
                                <td>{{recordType}}</td>
                                <td>{{tradeAmount}}</td>
                                <td>￥{{#price}}{{oldBalanceAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{newBalanceAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{oldTotalFrozenAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{newTotalFrozenAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{oldDepositAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{newDepositAmount}}{{/price}}</td>>
                                <td>￥{{#price}}{{oldRentDepositAmount}}{{/price}}</td>
                                <td>￥{{#price}}{{newRentDepositAmount}}{{/price}}</td>
                                <td>{{remark}}</td>
                                <td>{{#clockShorTime}}{{createTime}}{{/clockShorTime}}</td>
                                <td>{{#clockShorTime}}{{updateTime}}{{/clockShorTime}}</td>
                            </tr>
                            {{/listData}}
                            {{^listData}}
                            <tr>
                                <td valign="top" colspan="14" class="text-center">没有查询到客户流水</td>
                            </tr>
                            {{/listData}}
                            {{/dataSource}}
                            </tbody>
                        </script>
                        <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="accountListTable"></table>
                    </div>
                </div>
                <div class="row br-t">
                    <div class="col-xs-12 col-md-12 text-right mt10 mb10">
                        #parse("component/pager.vm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>