<div id="noticeModal" class="popup-basic admin-form popup-lg mfp-with-anim ">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i><span id="modalTitle"></span></span>
        </div>
        <form method="post" id="noticeForm" description="提交审核">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-12">
                        <label for="title" class="field-label">标题</label>
                        <label for="title" class="field prepend-icon">
                            <input type="text" name="title" id="title" class="gui-input required">
                            <label for="title" class="field-icon"><i class="fa fa-tag"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="content" class="field-label">内容</label>
                        <label for="content" class="field prepend-icon">
                            <textarea class="gui-textarea required" name="content" placeholder="请输入内容"></textarea>
                            <label for="content" class="field-icon"><i class="fa fa-tag"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="remark" class="field-label">备注</label>
                        <label for="remark" class="field prepend-icon">
                            <textarea class="gui-textarea" id="remark" name="remark" placeholder="请输入备注"></textarea>
                            <label for="remark" class="field-icon"><i class="fa fa-tag"></i>
                            </label>
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
                <button type="button" class="button btn-default cancelButton">取消</button>
            </div>
        </form>
    </div>
</div>