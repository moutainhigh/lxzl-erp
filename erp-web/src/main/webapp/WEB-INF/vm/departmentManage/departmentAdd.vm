<div id="addDepartmentModal" class="popup-basic admin-form mfp-with-anim "> ##mfp-hide
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i>添加部门</span>
        </div>
        <form method="post" id="addDepartmentForm" description="添加部门">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-12">
                        <label for="userName" class="field-label">部门名称</label>
                        <label for="departmentName" class="field prepend-icon">
                            <input type="text" name="departmentName" id="departmentName" class="gui-input required" placeholder="请输入部门名称" maxlength="20">
                            <label for="departmentName" class="field-icon"><i class="fa fa-tag"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="isActivated" class="field-label">部门类型</label>
                        <label class="field select">
                            <select id="departmentType" name="departmentType" class="required">
                                <option value="">请选择</option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" class="button btn-default" id="cancelAddDeparmentBtn">取消</button>
                <button type="submit" class="button btn-primary">确定</button>
            </div>
        </form>
    </div>
</div>