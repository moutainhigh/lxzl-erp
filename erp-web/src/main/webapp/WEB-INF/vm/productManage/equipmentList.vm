                                    <th>设备编号</th>
                                    <th>商品ID</th>
                                    <th>商品名</th>
                                    <th>商品图</th>
                                    <th>SKUID</th>
                                    <th>设备状态</th>
                                    <th>可用状态</th>
                                    <th>备注</th>
                                    {{#hasRowActionButtons}}
                                    <th class="text-right">操作</th>
                                    {{/hasRowActionButtons}}
                                </tr>
                            </thead>
                            <tbody>
                                {{#dataSource}}
                                    {{#listData}}
                                    <tr>
                                        {{#hasCommonActionButtons}}
                                        <td>
                                            <label class="option block mn">
                                                <input type="checkbox" name="checkItem" value="FR">
                                                <span class="checkbox mn"></span>
                                            </label>
                                        </td>
                                        {{/hasCommonActionButtons}}
                                        #*<td>{{productEquipmentId}}</td>*#
                                        <td>{{equipmentNo}}</td>
                                        <td>{{productId}}</td>
                                        <td>{{productName}}</td>
                                        <td><a class="productImg open-img-popup" data-imgs={{productImgJSON}}><img src="{{mainImg}}" /></a></td>
                                        <td>{{skuId}}</td>
                                        <td>{{equipmentStatusStr}}</td>
                                        <td>{{dataStatusStr}}</td>
                                        <td>{{remark}}</td>
                                        {{#hasRowActionButtons}}
                                        <td class="text-right">
                                            <div class="btn-group text-right">
                                                {{#rowActionButtons}}
                                                <button type="button" class="btn btn-default btn-xs {{class}}" data-productid="{{productId}}" data-skuid="{{skuId}}"> <i class="{{iClass}}"></i>{{text}} </button>
                                                {{/rowActionButtons}}
                                            </div>
                                        </td>
                                        {{/hasRowActionButtons}}
                                    </tr>
                                    {{/listData}}
                                    {{^listData}}
                                    <tr>
                                        <td valign="top" colspan="8" class="text-center">没有查询到设备</td>
                                    </tr>
                                    {{/listData}}
                                {{/dataSource}}
                            </tbody>
                        </script>
                        <table class="table table-striped admin-form theme-warning tc-checkbox-1 fs13" id="dataListTable"></table>
