<!DOCTYPE html>
<html>
<head>
    <title>爱租-运营管理系统-商品管理-商品列表</title>
    #parse("layout/header.vm")
    #*<link rel="stylesheet" type="text/css" href="${staticCommon}/vendor/plugins/datepicker/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="${staticCommon}/vendor/plugins/daterange/daterangepicker.css">*#
   #* <link rel="stylesheet" href="${staticCommon}/vendor/plugins/dropzone/css/dropzone.css">*#
    #parse("layout/theme.vm")
    <script type="text/javascript">
        common_load_css('${staticCommon}/rental/css','dropzone.css');
    </script>
</head>
<body class="blank-page">
    #parse("layout/toolbox.vm")
    <div id="main">
        #parse("layout/navbar.vm")
        #parse("layout/sidebar.vm")


        <section id="content_wrapper">
            #parse("layout/topbarDropmenu.vm")
            #parse("layout/topbar.vm")
            <section id="content" class="animated fadeIn">

                <div class="panel mb25 mt5">
                    <form id="searchForm">
                        <div class="panel-heading">
                            <span class="panel-title">商品查询</span>
                        </div>
                        <div class="panel-body p25 pb5 admin-form">
                            <div class="section row">
                                <div class="col-md-4">
                                    <label for="username" class="field-label">商品ID</label>
                                    <label for="productId" class="field prepend-icon">
                                        <input type="text" name="productId" id="productId" class="gui-input number" />
                                        <label for="productId" class="field-icon"><i class="fa fa-tag"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="username" class="field-label">商品名称</label>
                                    <label for="productName" class="field prepend-icon">
                                        <input type="productName" name="productName" id="productName" class="gui-input" />
                                        <label for="productName" class="field-icon"><i class="fa fa-tag"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label for="username" class="field-label">在售</label>
                                    <label class="field select">
                                        <select id="isSale" name="isSale">
                                            <option value="1">是</option>
                                            <option value="0">否</option>
                                        </select>
                                        <i class="arrow"></i>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer text-right admin-form">
                            <button type="submit" class="btn btn-primary"> 查询 </button>
                            <button type="reset" class="btn"> 重置 </button>
                        </div>
                    </form>
                </div>


                <div class="panel">
                    <div class="panel-menu p12 theme-primary">

                        <div class="row table-layout">
                            <div class="col-md-6">
                                <script type="text/html" id="actionButtonsTpl">
                                    {{#acitonButtons}}
                                    <button type="button" class="btn btn-default light" id="{{id}}" title="{{menuName}}"><i class="{{iClass}}"></i></button>
                                    {{/acitonButtons}}
                                </script>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-default light" id="btnRefresh" title="刷新"><i class="fa fa-refresh"></i>
                                    </button>
                                    <span id="acitonButtons"></span>
                                    #*<button type="button" class="btn btn-default light" id="btnAddProduct" title="添加商品"><i class="fa fa-plus"></i></button>
                                    <button type="button" class="btn btn-default light"><i class="fa fa-trash"></i></button>*#
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                            </div>
                        </div>

                    </div>
                    <div class="panel-body pn">
                        <div class="table-responsive">
                            <table class="table admin-form theme-warning tc-checkbox-1 fs13">
                            <thead>
                            <tr class="bg-light">
                                <th class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="orders" value="">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </th>
                                <th>商品ID</th>
                                <th>图片</th>
                                <th>商品名称</th>
                                <th>副标题</th>
                                #*<th>单位</th>*#
                                <th>列表价格</th>
                                <th>在售</th>
                                #*<th>商品描述</th>*#
##                                <th>关键字</th>
                                #*<th>备注</th>*#
                                <th class="text-right">操作</th>
                            </tr>
                            </thead>
                            <script type="text/html" id="orderListTpl">
                                {{#listData}}
                                <tr>
                                    <td class="text-center">
                                        <label class="option block mn">
                                            <input type="checkbox" name="mobileos" value="FR">
                                            <span class="checkbox mn"></span>
                                        </label>
                                    </td>
                                    <td>{{productId}}</td>
                                    <td><a class="productImg open-img-popup" data-imgs={{productImgJSON}}><img src="{{mainImg}}" /></a></td>
                                    <td>{{productName}}</td>
                                    <td>{{subtitle}}</td>
                                    #*<td>{{unit}}</td>*#
                                    <td>{{listPrice}}</td>
                                    <td>{{isSaleStr}}</td>
                                    #*<td>{{productDesc}}</td>*#
                                    #*<td>{{keyword}}</td>*#
                                    #*<td>{{remark}}</td>*#
                                    <td class="text-right">
                                        <div class="btn-group text-right">
                                            {{#acitonButtons}}
                                                {{#acitons}}
                                                    <button type="button" class="btn btn-default btn-xs {{class}}" data-productId="{{productId}}"> <i class="{{iClass}}"></i> </button>
                                                {{/acitons}}
                                            {{/acitonButtons}}
                                        </div>
                                    </td>
                                </tr>
                                {{/listData}}
                                {{^listData}}
                                <tr>
                                    <td valign="top" colspan="14">没有查询到商品</td>
                                </tr>
                                {{/listData}}
                            </script>
                            <tbody id="orderListTbody">
                            </tbody>
                        </table>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row table-layout">
                            <div class="col-xs-6 col-md-6 text-right">

                            </div>
                            #parse("component/pager.vm")
                        </div>
                    </div>

                </div>
            </section>
        </section>

        #parse("layout/sidebarRight.vm")
    </div>


    #parse("layout/footer.vm")

    #*#parse("productManage/productAdd.vm")*#

    #*<script type="text/javascript" src="${staticCommon}/vendor/plugins/daterange/moment.min.js"></script>
    <script type="text/javascript" src="${staticCommon}/vendor/plugins/daterange/daterangepicker.js"></script>*#

    <script type="text/javascript" src="${staticCommon}/vendor/plugins/dropzone/dropzone.min.js"></script>
    <script type="text/javascript">
        management_load_script('${staticManagement}/js','manage.product.js','manage.product.add.js','manage.product.edit.js','manage.product.view.js');
    </script>
    <script type="text/javascript">
        //功能事件初始化
        Rental.init();
        Layout.init();
        ProductManage.init();

        //UI效果初始化
        Core.init();
        Demo.init();



    </script>



</body>
</html>