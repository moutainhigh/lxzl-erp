<div id="addCustomerModal" class="popup-basic popup-xl admin-form mfp-with-anim "> ##mfp-hide
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i>添加客户</span>
        </div>
        <form method="post" id="addCustomerForm" description="添加客户">
            <div class="panel-body p25">
                <div class="section row">
                    <div class="col-md-4">
                        <label for="realName" class="field-label">真实姓名</label>
                        <label for="realName" class="field prepend-icon">
                            <input type="text" name="realName" id="realName" class="gui-input required letterOrChinese" placeholder="请输入真实姓名..." maxlength="10">
                            <label for="lastname" class="field-icon"><i class="fa fa-user"></i>
                            </label>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label for="email" class="field-label">邮箱</label>
                        <label for="email" class="field prepend-icon">
                            <input type="text" name="email" id="email" class="gui-input required email" placeholder="请输入电子邮箱...">
                            <label for="email" class="field-icon"><i class="fa fa-envelope"></i>
                            </label>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label for="phone" class="field-label">手机号</label>
                        <label for="phone" class="field prepend-icon">
                            <input type="text" name="phone" id="phone" class="gui-input required mobilephone" placeholder="请输入手机号...">
                            <label for="website" class="field-icon"><i class="fa fa-phone"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-4">
                        <label for="province" class="field-label">省份</label>
                        <label class="field select">
                            <select id="province" name="province" class="required">
                                <option value="">请选择</option>
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label for="city" class="field-label">城市</label>
                        <label class="field select">
                            <select id="city" name="city" class="required">
                                <option value="">请选择</option>
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label for="district" class="field-label">地区</label>
                        <label class="field select">
                            <select id="district" name="district" class="required">
                                <option value="">请选择</option>
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="address" class="field-label">详细地址</label>
                        <label for="address" class="field prepend-icon">
                            <textarea class="gui-textarea" id="address" name="address" placeholder="请输入详细地址"></textarea>
                            <label for="address" class="field-icon"><i class="fa fa-map-marker"></i>
                            </label>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="isDisabled" class="field-label">禁用</label>
                        <label class="field select">
                            <select id="isDisabled" name="isDisabled">
                                <option value="0">否</option>
                                <option value="1">是</option>
                            </select>
                            <i class="arrow"></i>
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        <label for="remark" class="field-label">备注</label>
                        <label for="remark" class="field prepend-icon">
                            <textarea class="gui-textarea" id="remark" name="remark" placeholder="请输入备注"></textarea>
                            <label for="remark" class="field-icon"><i class="fa fa-comments"></i>
                            </label>
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary">确定</button>
                <button type="button" class="button btn-default" id="cancelAddCustomerBtn">取消</button>
            </div>
        </form>
    </div>
</div>