<!DOCTYPE html>
<html>
<head>
    <title>爱租-运营管理系统-订单管理-订单列表</title>
    #parse("layout/header.vm")
    <link rel="stylesheet" type="text/css" href="${staticCommon}/vendor/plugins/datepicker/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="${staticCommon}/vendor/plugins/daterange/daterangepicker.css">
</head>
<body class="blank-page">
    #parse("layout/toolbox.vm")
    <div id="main">
        #parse("layout/navbar.vm")
        #parse("layout/sidebar.vm")


        <section id="content_wrapper">
            #parse("layout/topbarDropmenu.vm")
            #parse("layout/topbar.vm")
            <section id="content" class="animated fadeIn">
                <div class="panel mb25 mt5">
                    <form id="searchForm">
                        <input type="hidden" name="orderStatus" />
                        <div class="panel-heading">
                            <span class="panel-title">订单查询</span>
                        </div>
                        <div class="panel-body p25 pb5 admin-form">
                            <div class="section row">
                                <div class="col-md-3">
                                    <label for="username" class="field-label">下单时间</label>
                                    <label for="orderId" class="field prepend-icon">
                                        <input type="hidden" name="createStartTime" id="createStartTime" />
                                        <input type="hidden" name="createEndTime" id="createEndTime" />
                                        <input type="text" name="createTimePicker" id="createTimePicker" class="gui-input" placeholder="请输入选择下单时间">
                                        <label for="orderId" class="field-icon"><i class="fa fa-calendar"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <label for="username" class="field-label">订单ID</label>
                                    <label for="orderId" class="field prepend-icon">
                                        <input type="text" name="orderId" id="orderId" class="gui-input number" placeholder="请输入订单号...">
                                        <label for="orderId" class="field-icon"><i class="fa fa-tag"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <label for="username" class="field-label">订单编号</label>
                                    <label for="orderNo" class="field prepend-icon">
                                        <input type="orderNo" name="orderNo" id="orderNo" class="gui-input number" placeholder="请输入订单编码...">
                                        <label for="orderNo" class="field-icon"><i class="fa fa-tag"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <label for="username" class="field-label">购买人姓名</label>
                                    <label for="buyerRealName" class="field prepend-icon">
                                        <input type="text" name="buyerRealName" id="buyerRealName" class="gui-input" placeholder="请输入购买人姓名...">
                                        <label for="buyerUserId" class="field-icon"><i class="fa fa-user"></i>
                                        </label>
                                    </label>
                                </div>
                            </div>
                            <div class="section row">
                                <div class="col-md-3">
                                    <label for="username" class="field-label">收货人姓名</label>
                                    <label for="consigneeName" class="field prepend-icon">
                                        <input type="text" name="consigneeName" id="consigneeName" class="gui-input" placeholder="请输入收货人姓名...">
                                        <label for="buyerUserId" class="field-icon"><i class="fa fa-user"></i>
                                        </label>
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <label for="username" class="field-label">收货人手机号</label>
                                    <label for="consigneePhone" class="field prepend-icon">
                                        <input type="text" name="consigneePhone" id="consigneePhone" class="gui-input mobilephone" placeholder="请输入收货人手机号...">
                                        <label for="buyerUserId" class="field-icon"><i class="fa fa-user"></i>
                                        </label>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer text-right admin-form">
                            <button type="submit" class="btn btn-primary"> 查询 </button>
                            <button type="reset" class="btn"> 重置 </button>
                        </div>
                    </form>
                </div>
                <div class="panel">
                    <div class="panel-menu p12 theme-primary">

                        <div class="row table-layout">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default light" id="btnRefresh"><i class="fa fa-refresh"></i>
                                    </button>
                                    #*<button type="button" class="btn btn-default light"><i class="fa fa-trash"></i></button>*#
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                                <script type="text/html" id="osfBtnGroupTpl">
                                    <button type="button" class="btn btn-default dark"><i class="fa fa-filter"></i></button>
                                    {{#btnGroup}}
                                    <button type="button" class="btn btn-default orderFilterBtn {{activeClass}}" data-status={{status}}>{{value}}</button>
                                    {{/btnGroup}}
                                </script>
                                <div class="btn-group" id="osfBtnGroup"></div>
                            </div>
                        </div>

                    </div>
                    <div class="panel-body pn">
                        <div class="table-responsive">
                            <table class="table admin-form theme-warning tc-checkbox-1 fs13">
                            <thead>
                            <tr class="bg-light">
                                <th class="text-center">
                                    <label class="option block mn">
                                        <input type="checkbox" name="orders" value="">
                                        <span class="checkbox mn"></span>
                                    </label>
                                </th>
                                <th class="">订单ID</th>
                                <th class="">订单编号</th>
                                <th class="">状态</th>
                                <th class="">客户</th>
                                <th class="">租赁方式</th>
                                <th class="">租期</th>
                                #*<th class="">商品总数</th>*#
                                <th class="">商品总价</th>
                                <th class="">订单总价</th>
                                <th class="">优惠金额</th>
                                #*<th class="">运费</th>*#
                                <th class="">支付时间</th>
                                <th class="">发货时间</th>
                                <th class="">确认收货时间</th>
                                #*<th class="">预计归还时间</th>
                                <th class="">实际归还时间</th>*#
                                <th class="">购买人备注</th>
                                <th class="">订单备注</th>
                                <th class="text-right">操作</th>
                            </tr>
                            </thead>
                            <script type="text/html" id="orderListTpl">
                                {{#listData}}
                                <tr>
                                    <td class="text-center">
                                        <label class="option block mn">
                                            <input type="checkbox" name="mobileos" value="FR">
                                            <span class="checkbox mn"></span>
                                        </label>
                                    </td>
                                    <td class="">{{orderId}}</td>
                                    <td class="">{{orderNo}}</td>
                                    <td class="">{{orderStatusStr}}</td>
                                    <td class="">{{buyerRealName}}</td>
                                    <td class="">{{rentTypeStr}}</td>
                                    <td class="">{{rentTimeLength}}</td>
                                    #*<td class="">商品总数</td>*#
                                    <td class="">{{productAmountTotalFixed}}</td>
                                    <td class="">{{orderAmountTotalFixed}}</td>
                                    <td class="">{{discountAmountTotalFixed}}</td>
                                    #*<td class="">运费</td>*#
                                    <td class="">{{payTimeFormat}}</td>
                                    <td class="">{{deliveryTimeFormat}}</td>
                                    <td class="">{{confirmDeliveryTimeFormat}}</td>
                                    #*<td class="">预计归还时间</td>
                                    <td class="">实际归还时间</td>*#
                                    <td class="">{{buyerRemark}}</td>
                                    <td class="">{{remark}}</td>
                                    <td class="text-right">
                                        {{#acitonButtons}}
                                        <div class="btn-group text-right">
                                            {{#acitons}}
                                            <a href="${ctx}{{menuUrl}}?orderNo={{orderNo}}" type="button" class="btn btn-default btn-xs {{class}}" data-productId="{{productId}}"> <i class="{{iClass}}"></i> </a>
                                            {{/acitons}}
                                        </div>
                                        {{/acitonButtons}}
                                    </td>
                                </tr>
                                {{/listData}}
                                {{^listData}}
                                <tr>
                                    <td valign="top" colspan="14">没有查询到订单</td>
                                </tr>
                                {{/listData}}
                            </script>
                            <tbody id="orderListTbody">
                            </tbody>
                        </table>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row table-layout">
                            <div class="col-xs-6 col-md-6 text-right">

                            </div>
                            #parse("component/pager.vm")
                        </div>
                    </div>

                </div>
            </section>
        </section>

        #parse("layout/sidebarRight.vm")
    </div>
    #parse("layout/footer.vm")
    <script type="text/javascript" src="${staticCommon}/vendor/plugins/daterange/moment.min.js"></script>
    <script type="text/javascript" src="${staticCommon}/vendor/plugins/daterange/daterangepicker.js"></script>
    <script type="text/javascript">
        management_load_script('${staticManagement}/js','manage.order.js');
    </script>
    <script type="text/javascript">
        //功能事件初始化
        Rental.init();
        Layout.init();
        OrderManage.init();

        //UI效果初始化
        Core.init();
        Demo.init();
    </script>

</body>
</html>