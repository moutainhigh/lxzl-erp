                <div class="panel panel-primary panel-border top">
                    <div class="panel-menu p12">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="btn-group" id="actionCommonButtons">
                                    <button type="button" class="btn btn-sm btn-primary" id="btnRefresh"><i class="fa fa-refresh"></i></button>
                                </div>
                            </div>
                            <div class="col-md-9 text-right">
                                <form id="searchForm" class="form-horizontal">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary btn-sm">查询</button>
                                        <button type="reset" class="btn btn-default btn-sm">重置</button>
                                    </div>
                                    <div class="form-group pull-right mn mr10" style="width: 120px;">
                                        <input type="text" name="orderNo" id="orderNo" class="form-control input-sm bradius" autocomplete="off" placeholder="输入订单编号">
                                    </div>

                                    <div class="field form-group pull-right mn mr10" style="width: 120px;">
                                        <input type="text" name="buyerRealName" id="buyerRealName" class="form-control input-sm bradius" autocomplete="off" placeholder="输入客户姓名">
                                    </div>
                                    <div class="form-group pull-right mn mr10" style="width: 210px;">
                                        <input type="hidden" name="createStartTime" id="createStartTime" />
                                        <input type="hidden" name="createEndTime" id="createEndTime" />
                                        <div class="input-group date" id="createTimePicker">
                                            <input type="text" name="createTimePicker" id="createTimePickerInput" class="form-control input-sm bradiusL" autocomplete="off" placeholder="选择下单时间">
                                            <span class="input-group-addon cursor input-sm bradiusR"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>

                                    <script type="text/html" id="orderStatusSelectTpl">
                                        <option value="">全部</option>
                                        {{#orderStatus}}
                                        <option value={{num}}>{{value}}</option>
                                        {{/orderStatus}}
                                    </script>
                                    <select name="orderStatus" id="orderStatus" class="hide"></select>
                                </form>
                            </div>
                        </div>

                    </div>
                    <div class="panel-body pn">
                        <div class="table-responsive">
                            <script type="text/html" id="dataListTpl">
                                <thead>
                                    <tr class="bg-light">
                                        {{#hasCommonActionButtons}}
                                        <th class="text-center">
                                            <label class="option block mn">
                                                <input type="checkbox" name="orders" value="">
                                                <span class="checkbox mn"></span>
                                            </label>
                                        </th>
                                        {{/hasCommonActionButtons}}
                                        #*<th class="">订单ID</th>*#
                                        <th class="">订单编号</th>
                                        <th class="">状态</th>
                                        <th class="">客户</th>
                                        <th class="">租赁方式</th>
                                        <th class="">租期</th>
                                        #*<th class="">商品总数</th>*#
                                        <th class="">商品总价</th>
                                        <th class="">订单总价</th>
                                        <th class="">优惠金额</th>
                                        #*<th class="">运费</th>*#
                                        <th class="">支付时间</th>
                                        <th class="">发货时间</th>
                                        <th class="">确认收货时间</th>
                                        #*<th class="">预计归还时间</th>
                                        <th class="">实际归还时间</th>*#
                                        <th class="">购买人备注</th>
                                        <th class="">订单备注</th>
                                        {{#hasRowActionButtons}}
                                        <th class="text-right">操作</th>
                                        {{/hasRowActionButtons}}
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#dataSource}}
                                        {{#listData}}
                                        <tr>
                                            {{#hasCommonActionButtons}}
                                            <td class="text-center">
                                                <label class="option block mn">
                                                    <input type="checkbox" name="mobileos" value="FR">
                                                    <span class="checkbox mn"></span>
                                                </label>
                                            </td>
                                            {{/hasCommonActionButtons}}
                                            #*<td class="">{{orderId}}</td>*#
                                            <td class="">{{orderNo}}</td>
                                            <td class="">{{orderStatusStr}}</td>
                                            <td class="">{{buyerRealName}}</td>
                                            <td class="">{{rentTypeStr}}</td>
                                            <td class="">{{rentTimeLength}}</td>
                                            #*<td class="">商品总数</td>*#
                                            <td class="">{{productAmountTotalFixed}}</td>
                                            <td class="">{{orderAmountTotalFixed}}</td>
                                            <td class="">{{discountAmountTotalFixed}}</td>
                                            #*<td class="">运费</td>*#
                                            <td class="">{{payTimeFormat}}</td>
                                            <td class="">{{deliveryTimeFormat}}</td>
                                            <td class="">{{confirmDeliveryTimeFormat}}</td>
                                            #*<td class="">预计归还时间</td>
                                            <td class="">实际归还时间</td>*#
                                            <td class="">{{buyerRemark}}</td>
                                            <td class="">{{remark}}</td>
                                            {{#hasRowActionButtons}}
                                            <td class="text-right">
                                                <div class="btn-group text-right">
                                                    {{#rowActionButtons}}
                                                    <a href="${ctx}{{menuUrl}}?orderNo={{orderNo}}" type="button" class="btn btn-default btn-xs {{class}}" data-productId="{{productId}}"> <i class="{{iClass}}"></i> </a>
                                                    {{/rowActionButtons}}
                                                </div>
                                            </td>
                                            {{/hasRowActionButtons}}
                                        </tr>
                                        {{/listData}}
                                        {{^listData}}
                                        <tr>
                                            <td valign="top" colspan="14">没有查询到订单</td>
                                        </tr>
                                        {{/listData}}
                                    {{/dataSource}}
                                </tbody>
                            </script>
                            <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="dataListTable"></table>
                        </div>
