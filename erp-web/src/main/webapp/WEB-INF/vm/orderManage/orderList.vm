    <script type="text/javascript">
        management_load_script('${staticManagement}/js','manage.order.js');
    </script>
    <script type="text/javascript">
        //功能事件初始化
        Rental.init();
        Layout.init();
        OrderManage.init();

        //UI效果初始化
        Core.init();
        Demo.init();
    </script>

