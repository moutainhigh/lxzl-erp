                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#dataSource}}
                                        {{#listData}}
                                        <tr>
                                            <td>
                                                <div class="mw200">
                                                    {{itemName}}
                                                </div>
                                            </td>
                                            <td>{{statementDetailTypeValue}}</td>
                                            <td>￥{{#price}}{{unitAmount}}{{/price}}</td>
                                            <td>{{itemCount}}</td>
                                            <td>{{itemRentTypeValue}}</td>
                                            <td>{{statementDetailPhase}}</td>
                                            <td>￥{{#price}}{{statementDetailAmount}}{{/price}}</td>
                                            <td>￥{{#price}}{{statementDetailOtherAmount}}{{/price}}</td>
