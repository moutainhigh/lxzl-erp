<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxzl.erp.dataaccess.dao.mysql.k3.K3MappingCategoryMapper">

	<resultMap id="K3MappingCategoryDO" type="com.lxzl.erp.dataaccess.domain.k3.K3MappingCategoryDO">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="erp_category_code" jdbcType="VARCHAR" property="erpCategoryCode" />
		<result column="k3_category_code" jdbcType="VARCHAR" property="k3CategoryCode" />
		<result column="category_name" jdbcType="VARCHAR" property="categoryName" />
	</resultMap>

	<sql id="column_List">
		ekmc.id,ekmc.erp_category_code,ekmc.k3_category_code,ekmc.category_name
	</sql>

	<select id="findById" resultMap="K3MappingCategoryDO" parameterType="java.lang.Integer">
		SELECT <include refid="column_List"/> FROM erp_k3_mapping_category ekmc 
		WHERE ekmc.id = #{id, jdbcType=INTEGER}
	</select>

	<select id="findByErpCode" resultMap="K3MappingCategoryDO" parameterType="java.lang.String">
		SELECT <include refid="column_List"/> FROM erp_k3_mapping_category ekmc
		WHERE ekmc.erp_category_code = #{erpCode, jdbcType=VARCHAR}
	</select>

	<select id="findByK3Code" resultMap="K3MappingCategoryDO" parameterType="java.lang.String">
		SELECT <include refid="column_List"/> FROM erp_k3_mapping_category ekmc
		WHERE ekmc.k3_category_code = #{k3Code, jdbcType=VARCHAR}
	</select>

	<select id="listCount" resultType="java.lang.Integer" parameterType="map">
		SELECT count(ekmc.id) FROM erp_k3_mapping_category ekmc
	</select>

	<select id="listPage" resultMap="K3MappingCategoryDO" parameterType="map">
		SELECT <include refid="column_List"/> FROM erp_k3_mapping_category ekmc
		LIMIT #{maps.start},#{maps.pageSize}
	</select>

	<sql id="set_column_sql">
		<set>
			<if test="erpCategoryCode != null">
				erp_category_code = #{erpCategoryCode,jdbcType=VARCHAR},
			</if>
			<if test="k3CategoryCode != null">
				k3_category_code = #{k3CategoryCode,jdbcType=VARCHAR},
			</if>
			<if test="categoryName != null">
				category_name = #{categoryName,jdbcType=VARCHAR},
			</if>
		</set>
	</sql>

	<insert id="save" keyProperty="id" useGeneratedKeys="true" parameterType="com.lxzl.erp.dataaccess.domain.k3.K3MappingCategoryDO">
		INSERT INTO erp_k3_mapping_category <include refid="set_column_sql"/>
	</insert>

	<update id="update" parameterType="com.lxzl.erp.dataaccess.domain.k3.K3MappingCategoryDO">
		UPDATE erp_k3_mapping_category <include refid="set_column_sql"/> WHERE id = #{id, jdbcType=INTEGER}
	</update>
</mapper>