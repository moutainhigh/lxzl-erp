				and ebs.slip_month = #{maps.bankSlipQueryParam.slipMonth,jdbcType=DATE}
			</if>
			<if test="maps.bankSlipQueryParam != null &amp;&amp; maps.bankSlipQueryParam.slipStatus != null">
				and ebs.slip_status = #{maps.bankSlipQueryParam.slipStatus,jdbcType=INTEGER}
			</if>
			<if test="maps.bankSlipQueryParam != null &amp;&amp; maps.bankSlipQueryParam.bankSlipId != null">
				and ebs.id = #{maps.bankSlipQueryParam.bankSlipId,jdbcType=INTEGER}
			</if>
			<if test="maps.isQueryAll == null">
				and ebs.data_status = 1
			</if>
			<if  test="maps.alreadyPushDownOrPortionClaim != null &amp;&amp;maps.alreadyPushDownOrPortionClaim == 1">
				and (ebs.slip_status = 1 OR ebs.slip_status = 2)
			</if>
			<if  test="maps.isClaimed != null &amp;&amp; maps.isClaimed == 1">
				and ebsd.detail_status = 2
			</if>
		</where>
		ORDER BY ebs.slip_month DESC ,ebs.sub_company_id ASC
		LIMIT #{maps.start},#{maps.pageSize}
	</select>


