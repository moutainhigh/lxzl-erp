<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxzl.erp.dataaccess.dao.mysql.user.UserDepartmentMapper">

	<resultMap id="UserDepartmentDO" type="com.lxzl.erp.dataaccess.domain.user.UserDepartmentDO">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="user_id" jdbcType="INTEGER" property="userId" />
		<result column="department_id" jdbcType="INTEGER" property="departmentId" />
		<result column="department_name" jdbcType="INTEGER" property="departmentName" />
		<result column="data_status" jdbcType="INTEGER" property="dataStatus" />
		<result column="remark" jdbcType="VARCHAR" property="remark" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="create_user" jdbcType="VARCHAR" property="createUser" />
		<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="update_user" jdbcType="VARCHAR" property="updateUser" />
	</resultMap>

	<sql id="column_List">
		eud.id,eud.user_id,eud.department_id,eud.data_status,eud.remark,eud.create_time,eud.create_user,eud.update_time,eud.update_user
	</sql>

	<select id="findById" resultMap="UserDepartmentDO" parameterType="java.lang.Integer">
		select <include refid="column_List"/> from erp_user_department eud 
		where eud.id = #{id, jdbcType=INTEGER} and data_status = 1 
	</select>

	<select id="listCount" resultType="java.lang.Integer" parameterType="map">
		select count(eud.id) from erp_user_department eud 
		<where>
			<if test="true">
				and eud.data_status = 1
			</if>
		</where>
	</select>

	<select id="listPage" resultMap="UserDepartmentDO" parameterType="map">
		select <include refid="column_List"/> from erp_user_department eud 
		<where>
			<if test="true">
				and eud.data_status = 1
			</if>
		</where>
		LIMIT #{maps.start},#{maps.pageSize}
	</select>

	<select id="findListByUserId" resultMap="UserDepartmentDO" parameterType="java.lang.Integer">
		select <include refid="column_List"/>,ed.department_name as department_name
		from erp_user_department eud
		left join erp_department ed on ed.id = eud.department_id
		where eud.user_id = #{userId,jdbcType=INTEGER} and eud.data_status = 1
	</select>

	<sql id="set_column_sql">
		<set>
			<if test="userId != null">
				user_id = #{userId,jdbcType=INTEGER},
			</if>
			<if test="departmentId != null">
				department_id = #{departmentId,jdbcType=INTEGER},
			</if>
			<if test="dataStatus != null">
				data_status = #{dataStatus,jdbcType=INTEGER},
			</if>
			<if test="remark != null">
				remark = #{remark,jdbcType=VARCHAR},
			</if>
			<if test="createTime != null">
				create_time = #{createTime,jdbcType=TIMESTAMP},
			</if>
			<if test="createUser != null">
				create_user = #{createUser,jdbcType=VARCHAR},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime,jdbcType=TIMESTAMP},
			</if>
			<if test="updateUser != null">
				update_user = #{updateUser,jdbcType=VARCHAR},
			</if>
		</set>
	</sql>

	<insert id="save" keyProperty="id" useGeneratedKeys="true" parameterType="com.lxzl.erp.dataaccess.domain.user.UserDepartmentDO">
		insert into erp_user_department <include refid="set_column_sql"/>
	</insert>

	<update id="update" parameterType="com.lxzl.erp.dataaccess.domain.user.UserDepartmentDO">
		update erp_user_department <include refid="set_column_sql"/> WHERE id = #{id, jdbcType=INTEGER}
	</update>
</mapper>