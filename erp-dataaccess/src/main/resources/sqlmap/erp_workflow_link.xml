	<select id="findById" resultMap="WorkflowLinkDO" parameterType="java.lang.Integer">
		select <include refid="column_List"/> from erp_workflow_link ewl 
		where ewl.id = #{id, jdbcType=INTEGER} and data_status = 1 
	</select>

	<select id="findByWorkflowTypeAndReferId" resultMap="WorkflowLinkDO" parameterType="map">
		select link.*,<include refid="detail_column_List"/> from
		(
			select <include refid="column_List"/> from erp_workflow_link ewl
			where ewl.workflow_type = #{workflowType, jdbcType=INTEGER} and ewl.workflow_refer_id = #{referId, jdbcType=INTEGER} and data_status = 1
		) link left join erp_workflow_link_detail ewld on ewld.workflow_link_id = link.id and ewld.data_status = 1
		order by ewld.id
	</select>

	<select id="listCount" resultType="java.lang.Integer" parameterType="map">
		select count(ewl.id) from erp_workflow_link ewl 
		<where>
			<if test="true">
				and ewl.data_status = 1
			</if>
		</where>
	</select>

	<select id="listPage" resultMap="WorkflowLinkDO" parameterType="map">
		select <include refid="column_List"/> from erp_workflow_link ewl 
		<where>
			<if test="true">
				and ewl.data_status = 1
			</if>
		</where>
		LIMIT #{maps.start},#{maps.pageSize}
	</select>

