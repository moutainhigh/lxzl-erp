	</insert>

	<update id="update" parameterType="com.lxzl.erp.dataaccess.domain.workflow.WorkflowLinkDO">
		update erp_workflow_link <include refid="set_column_sql"/> WHERE id = #{id, jdbcType=INTEGER}
	</update>
