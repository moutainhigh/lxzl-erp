		ewld.id as detail_id,ewld.workflow_link_id as detail_workflow_link_id,ewld.workflow_refer_id as detail_workflow_refer_id,ewld.workflow_step as detail_workflow_step,ewld.workflow_current_node_id as detail_workflow_current_node_id,ewld.workflow_previous_node_id as detail_workflow_previous_node_id,ewld.workflow_next_node_id as detail_workflow_next_node_id,ewld.verify_user as detail_verify_user,ewld.verify_time as detail_verify_time,ewld.verify_status as detail_verify_status,ewld.verify_opinion as detail_verify_opinion,ewld.data_status as detail_data_status,ewld.remark as detail_remark,ewld.create_time as detail_create_time,ewld.create_user as detail_create_user,ewld.update_time as detail_update_time,ewld.update_user as detail_update_user
