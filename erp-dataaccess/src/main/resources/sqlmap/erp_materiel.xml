<mapper namespace="com.lxzl.erp.dataaccess.dao.mysql.materiel.MaterielMysqlDAO">

	<resultMap type="com.lxzl.erp.dataaccess.domain.materiel.MaterielDO" id="MaterielDO">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="materiel_no" jdbcType="VARCHAR" property="materielNo" />
		<result column="materiel_name" jdbcType="VARCHAR" property="materielName" />
		<result column="materiel_type" jdbcType="INTEGER" property="materielType" />
		<result column="materiel_price" jdbcType="DECIMAL" property="materielPrice" />
		<result column="data_status" jdbcType="INTEGER" property="dataStatus" />
