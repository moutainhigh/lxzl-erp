<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lxzl.erp.dataaccess.dao.mysql.material.MaterialMapper">

	<resultMap type="com.lxzl.erp.dataaccess.domain.material.MaterialDO" id="MaterialDO">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="material_no" jdbcType="VARCHAR" property="materialNo" />
		<result column="material_name" jdbcType="VARCHAR" property="materialName" />
		<result column="brand_id" jdbcType="INTEGER" property="brandId" />
		<result column="category_id" jdbcType="INTEGER" property="categoryId" />
		<result column="property_id" jdbcType="INTEGER" property="propertyId" />
		<result column="property_value_id" jdbcType="INTEGER" property="propertyValueId" />
		<result column="material_price" jdbcType="DECIMAL" property="materialPrice" />
		<result column="original_price" jdbcType="DECIMAL" property="originalPrice" />
		<result column="rent_price" jdbcType="DECIMAL" property="rentPrice" />
		<result column="material_desc" jdbcType="VARCHAR" property="materialDesc" />
		<result column="data_status" jdbcType="INTEGER" property="dataStatus" />
		<result column="remark" jdbcType="VARCHAR" property="remark" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="create_user" jdbcType="VARCHAR" property="createUser" />
		<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="update_user" jdbcType="VARCHAR" property="updateUser" />
	</resultMap>

	<sql id="column_List">
		em.id,em.ateriel_no,em.ateriel_name,em.rand_id,em.ategory_id,em.roperty_id,em.roperty_value_id,em.material_price,em.riginal_price,em.ent_price,em.ata_status,em.emark,em.reate_time,em.reate_user,em.update_time,em.pdate_user
	</sql>

	<select id="findById" resultMap="MaterialDO" parameterType="java.lang.Integer">
		select
		<include refid="column_List"/>
		from erp_material em where em.id = #{id, jdbcType=INTEGER} and data_status = 1
	</select>


	<sql id="set_column_sql">
		<set>
			<if test="materialNo != null">
				material_no = #{materialNo,jdbcType=VARCHAR},
			</if>
			<if test="materialName != null">
				material_name = #{materialName,jdbcType=VARCHAR},
			</if>
			<if test="brandId != null">
				brand_id = #{brandId,jdbcType=INTEGER},
			</if>
			<if test="categoryId != null">
				category_id = #{categoryId,jdbcType=INTEGER},
			</if>
			<if test="propertyId != null">
				property_id = #{propertyId,jdbcType=INTEGER},
			</if>
			<if test="propertyValueId != null">
				property_value_id = #{propertyValueId,jdbcType=INTEGER},
			</if>
			<if test="materialPrice != null">
				material_price = #{materialPrice,jdbcType=DECIMAL},
			</if>
			<if test="originalPrice != null">
				original_price = #{originalPrice,jdbcType=DECIMAL},
			</if>
			<if test="rentPrice != null">
				rent_price = #{rentPrice,jdbcType=DECIMAL},
			</if>
			<if test="dataStatus != null">
				data_status = #{dataStatus,jdbcType=INTEGER},
			</if>
			<if test="remark != null">
				remark = #{remark,jdbcType=VARCHAR},
			</if>
			<if test="createTime != null">
				create_time = #{createTime,jdbcType=TIMESTAMP},
			</if>
			<if test="createUser != null">
				create_user = #{createUser,jdbcType=VARCHAR},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime,jdbcType=TIMESTAMP},
			</if>
			<if test="updateUser != null">
				update_user = #{updateUser,jdbcType=VARCHAR},
			</if>
			<if test="materialDesc != null">
				material_desc = #{materialDesc,jdbcType=LONGVARCHAR},
			</if>
		</set>
	</sql>

	<update id="update" parameterType="com.lxzl.erp.dataaccess.domain.material.MaterialDO">
		update erp_material
		<include refid="set_column_sql"/>
		WHERE id = #{id, jdbcType=INTEGER}
	</update>

	<insert id="save" keyProperty="id" useGeneratedKeys="true"
			parameterType="com.lxzl.erp.dataaccess.domain.material.MaterialDO">
		INSERT INTO erp_material
		<include refid="set_column_sql"/>
	</insert>

</mapper>