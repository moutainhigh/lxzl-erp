		</where>
	</select>

	<select id="listPage" resultMap="ExchangeOrderMaterialDO" parameterType="map">
		SELECT <include refid="column_List"/> FROM erp_exchange_order_material eeom 
		<where>
			<if test="true">
				AND eeom.data_status = 1
			</if>
		</where>
