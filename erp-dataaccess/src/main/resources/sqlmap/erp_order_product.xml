                and mop.data_status = 1
            </if>
            <if test="maps.queryProductParam.orderStatus != null">
                and mo.order_status = #{maps.queryProductParam.orderStatus, jdbcType=INTEGER}
            </if>
        </where>
        LIMIT #{maps.start},#{maps.pageSize}
        ) mop
        LEFT JOIN erp_product_equipment_storage_record esr ON esr.order_product_id = mop.id
        ORDER BY mop.create_time DESC
