    <select id="findOrderProductCountByParams" resultType="java.lang.Integer" parameterType="map">
        select count(mop.id)
        from erp_order_product mop
        <where>
            <if test="maps.queryProductParam.orderId != null">
                and mop.order_id = #{maps.queryProductParam.orderId, jdbcType=INTEGER}
            </if>
            <if test="maps.queryProductParam.productId != null">
                and mop.product_id = #{maps.queryProductParam.productId, jdbcType=INTEGER}
            </if>
